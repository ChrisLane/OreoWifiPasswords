<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/wifi_entry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight_selected"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/Row1GridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="1"
            tools:context=".GridXMLActivity">

            <CheckBox
                android:id="@+id/current_wifi"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="" />

            <TextView
                android:id="@+id/title_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="4dp"
                android:paddingTop="20dp"
                android:singleLine="true"
                android:text="@string/text_placeholder"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="@dimen/size_text_primary" />
        </GridLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/Row2GridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="1"
            tools:context=".GridXMLActivity">

            <Space
                android:layout_width="40sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/password_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="4dp"
                android:paddingBottom="20dp"
                android:singleLine="true"
                android:text="@string/text_placeholder"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_text_secondary" />
        </GridLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/drag_handler"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_list_item"
        android:layout_gravity="top|end"
        android:contentDescription="@string/description_drag_handler"
        android:padding="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_gesture_drag"
        android:tint="@color/colorHighlight" />


    <TextView
        android:id="@+id/tag_wifi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:drawableLeft="@drawable/ic_action_tag"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_action_tag"
        android:ems="8"
        android:padding="4dp"
        android:singleLine="true"
        android:text="@string/text_placeholder"
        android:textColor="@color/colorSecondaryText" />


</android.support.v7.widget.CardView>